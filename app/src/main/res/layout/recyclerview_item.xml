<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="ticker_data"
            type="com.firstapp.stockmanager.network.TickerData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/symbol"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@{ticker_data.symbol}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063" />

        <TextView
            android:id="@+id/open"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@{Double.toString(ticker_data.open)}"
            app:layout_constraintStart_toEndOf="@id/symbol"
            app:layout_constraintTop_toTopOf="@id/symbol" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@{Double.toString(ticker_data.close)}"
            app:layout_constraintStart_toEndOf="@id/open"
            app:layout_constraintTop_toTopOf="@id/open" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
